{
  "manifest_version": 3,
  "name": "The Third Can",
  "version": "0.0.0",

  "description": "A suite of tools to improve the user experience on https://twocansandstring.com",
  "homepage_url": "https://github.com/aprzn123/TheThirdCan",
  "icons": {
    "48": "favicon.ico"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "thirdcan@novaberman.com"
    }
  },

  "permissions": [
    "storage"
  ],


  "action": {
    "default_icon": "favicon.ico",
    "default_title": "The Third Can",
    "default_popup": "popup/config.html"
  },

  "content_scripts": [
    {
      "matches": ["*://twocansandstring.com/answer"],
      "js": ["/js/browser-polyfill.min.js", "/js/answer.js"]
    },
    {
      "matches": ["*://twocansandstring.com/"],
      "js": ["/js/browser-polyfill.min.js", "/js/home.js"]
    },
    {
      "matches": ["*://twocansandstring.com/*"],
      "js": ["/js/browser-polyfill.min.js", "js/thirdcan.js"]
    },
    {
      "matches": ["*://twocansandstring.com/forum/*"],
      "js": ["/js/browser-polyfill.min.js", "js/forum.js"]
    },
    {
      "matches": ["*://twocansandstring.com/savedquestions"],
      "js": ["/js/browser-polyfill.min.js", "js/savedquestions.js"]
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["injected/*"],
      "matches": ["*://twocansandstring.com/*"]
    }
  ]
}
